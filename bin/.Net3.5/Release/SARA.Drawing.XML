            <summary>
            Convert <see cref="T:SARA.Core.FloatMatrix"/> to <see cref="T:System.Drawing.Bitmap"/>. Only for 2D matrices.
            </summary>
            <param name="matrix">
            Matrix to convert.
            </param>
